{
  "name": "boftp",
  "displayName": "boFTP",
  "description": "Transfert ftp d'élément",
  "version": "0.1.2",
  "publisher": "borakLeRouge",
  "icon": "iconeBn.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/BorakLeRouge/boFTP"
  },  
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:boftp.transfertFTP" ,
    "onCommand:boftp.testFTP"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "boftp.transfertFTP",
        "title": "boFTP-Transfert de fichier"
      } ,
      {
        "command": "boftp.testFTP",
        "title": "boFTP-Validation accès FTP"
      }
    ],
		"menus": {
			"editor/context": [ {
				"command": "boftp.transfertFTP",
				"group": "0_FTP@1"
			} ]
		}
		,
		"configuration": {
			"title": "boFTP",
			"properties": {
			  	"boFTP.CompteRenduText": {
					"type": "boolean",
					"default": false,
					"description": "Récupération du compte-rendu sur un onglet à part."
			  	}
			}
		}
  },
  "scripts": {
    "lint": "eslint .",
    "pretest": "npm run lint",
    "test": "node ./test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.4",
    "@types/node": "^12.11.7",
    "@types/vscode": "^1.54.0",
    "eslint": "^7.19.0",
    "glob": "^7.1.6",
    "mocha": "^8.2.1",
    "typescript": "^4.1.3",
    "vscode-test": "^1.5.0"
  },
  "dependencies": {
      "js-yaml": "^3.13.1"
  }
}
